mixin nextButton(props) 
  button(class=`slide-button slide-button--${props.direction}` href=`#${props.forId}` role="button" data-slide="next")
    i(class=`fa-solid fa-arrow-${props.direction}`)      

mixin prevButton(props) 
  button(class=`slide-button slide-button--${props.direction}` href=`#${props.forId}` role="button" data-slide="prev")
    i(class=`fa-solid fa-arrow-${props.direction}`)
