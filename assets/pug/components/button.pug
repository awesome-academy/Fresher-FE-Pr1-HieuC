mixin button(props)
  if (props.isLink)
    a(class=`button ${props.type ? `button--${props.type}` : ''} ${props.size ? `button--${props.size}` : ''} ${props.color ? `button--${props.color}` : ''}` href=`${props.href}`) #{props.title}
  else
    button(class=`button ${props.type ? `button--${props.type}` : ''} ${props.size ? `button--${props.size}` : ''} ${props.color ? `button--${props.color}` : ''}`) #{props.title} 
